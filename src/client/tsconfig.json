{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM"],
    "types": [],
    "jsx": "react",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@data/*": ["../data/*"],
      "@state/*": ["./state/*"],
      "@hooks/*": ["./hooks/*"],
      "@ui-library": ["../../node_modules/@mui/material"],
      "@icons/*": ["../../node_modules/@mui/icons-material/*"],
      "@packages/*": ["../@packages/*"],
      "@libraries/*": ["../@libraries/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
